                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/shape_circle" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:foregroundTint="@color/white"
                        android:src="@drawable/notes"
                        app:tint="@color/white" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_pic_1"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/one" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_tournament_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/cv_pic_1"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="@string/tournament_1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_location_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/tv_tournament_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/cv_pic_1"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tournament_1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/iv_location_1"
                    android:fontFamily="@font/segoe_ui"
                    android:text="@string/venue_1"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_game_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/iv_location_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/cv_pic_1"
                    android:src="@drawable/ic_football" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_location_1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/iv_game_1"
                    android:fontFamily="@font/segoe_ui"
                    android:text="@string/game_1"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_schedule_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/iv_game_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/cv_pic_1"
                    android:src="@drawable/ic_schedule" />

                <TextView
                    android:id="@+id/tv_report_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_game_1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/iv_schedule_1"
                    android:fontFamily="@font/segoe_ui"
                    android:text="@string/report_at"
                    android:textSize="11sp" />

                <TextView
